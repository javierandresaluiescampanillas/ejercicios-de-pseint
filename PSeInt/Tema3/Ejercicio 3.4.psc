Algoritmo ejercicio4
	definir numero1, numero2, suma, resta, total como entero;
	definir cociente como real;
	escribir sin saltar "por favor introduzca un valor:";
	leer numero1;
	escribir sin saltar "por favor introduzca un valor:";
	leer numero2;
	suma<-numero1+numero2;
	resta<-numero1-numero2;
	total<-numero1*numero2;
	cociente<-numero1/numero2;
	escribir "suma:",suma;
	escribir "resta:",resta;
	escribir "multiplicacion:",total;
	escribir "division:",cociente;
FinAlgoritmo
